# Customer Portal URL (Client-side)
NEXT_PUBLIC_CUSTOMER_PORTAL_URL="https://your-customer-portal.run.app"

# FastAPI URL for Client-side (webhooks, etc)
NEXT_PUBLIC_FASTAPI_URL="https://your-fastapi-backend.run.app"

# Google Analytics 4 Measurement ID
# Get this from: Google Analytics > Admin > Data Streams > Your Web Stream
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Google Ads Conversion ID
NEXT_PUBLIC_GOOGLE_ADS_ID="AW-XXXXXXXXXX"

# Gmail Configuration for Support Tickets
# IMPORTANT: Use Gmail App Password, not your regular password
# To create: https://myaccount.google.com/apppasswords
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-16-char-app-password"
SUPPORT_EMAIL="support@yourdomain.com"
